<UserControl
    x:Class="NicenisTestGui.LocalStringTestUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:n="clr-namespace:Nicenis.Windows.Data;assembly=Nicenis"
    xmlns:p="clr-namespace:NicenisTestGui.Properties"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
    n:Localization.Resource="{x:Static p:SubStrings.ResourceManager}"
    >
    <TextBlock
        Grid.Row="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{n:LocalString Earth}"
        />
</UserControl>
